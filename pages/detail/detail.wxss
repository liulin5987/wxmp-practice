/* pages/detail/detail.wxss */
.swiper {
  height: 600rpx;
}
.topimg {
  width: 100%;
 
}
.goodstitle {
  margin: 10rpx;
  border-bottom: 10rpx solid #eeeeee;
}
.title {
  font-size: 36rpx;
  text-indent: 1em;
}
.price {
  position: relative;
  margin: 16rpx 0;
}
.price text {
  padding: 0 10rpx;
}
.nowprice {
  font-size: 40rpx;
  color: #ff5777;
}
.oldprice {
  font-size: 28rpx;
  text-decoration: line-through;
}

.discount {
  font-size: 28rpx;
  background-color: #ff5777;
  color: #fff;
  border-radius: 24rpx;
  position: relative;
  bottom: 10rpx;
}
.columns {
  display: flex;
  justify-content: space-between;
  text-align: center;
}
.shopinfo {
  padding: 10rpx;
}
.logo {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin: 32rpx;
}
.shopbody {
  border-bottom: 1px solid rgba(50,50,50,.05);
}
.left {
  width: 55%;
  display: flex;
  justify-content: space-evenly;
}
.right {
  width: 45%;
  display: flex;
  flex-flow: column;
  align-content: space-between;
}
